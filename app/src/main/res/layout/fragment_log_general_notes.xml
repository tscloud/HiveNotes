<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="net.tscloud.hivenotes.LogGeneralNotesFragment">

    <TextView
        android:id="@+id/textGeneralNotes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/general_notes_string"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:id="@+id/linearLayoutDate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/textGeneralNotes"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:id="@+id/textDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.30"
            android:text="@string/general_notes_date_text"
            android:layout_gravity="center_vertical" />

        <EditText
            android:id="@+id/editTextDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.65"
            android:inputType="date"
            android:ems="10" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutPopulation"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/linearLayoutDate"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:id="@+id/textPopulation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.30"
            android:text="@string/general_notes_population_text"
            android:layout_gravity="center_vertical" />

        <Spinner
            android:id="@+id/spinnerPopulation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.70"
            android:entries="@array/population_array" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutTemperament"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/linearLayoutPopulation"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:id="@+id/textTemperment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.30"
            android:text="@string/general_notes_temperament_text"
            android:layout_gravity="center_vertical" />

        <Spinner
            android:id="@+id/spinnerTemperament"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.70"
            android:entries="@array/temperament_array" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutQueen"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/linearLayoutTemperament"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true">

        <TextView
            android:id="@+id/textQueen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:text="@string/general_notes_queen_text"
            android:layout_gravity="center_vertical" />

        <Spinner
            android:id="@+id/spinnerQueen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.70"
            android:entries="@array/queen_array" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutBroodFrames"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/linearLayoutQueen">

        <TextView
            android:id="@+id/textBroodFrames"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.35"
            android:text="@string/general_notes_broodframes_text"
            android:layout_gravity="center_vertical" />

        <Spinner
            android:id="@+id/spinnerBroodFrames"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.65" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutBroodPattern"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/linearLayoutBroodFrames"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:id="@+id/textBroodPattern"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:text="@string/general_notes_broodpattern_text"
            android:layout_gravity="center_vertical" />

        <Spinner
            android:id="@+id/spinnerBroodPattern"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.70"
            android:entries="@array/brood_pattern_array" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutHoneyStores"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/linearLayoutBroodPattern"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:id="@+id/textHoneyStores"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.35"
            android:text="@string/general_notes_honeystores_text"
            android:layout_gravity="center_vertical" />

        <Spinner
            android:id="@+id/spinnerHoneyStores"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.65"
            android:entries="@array/stores_array" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutPollenStores"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/linearLayoutHoneyStores"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:id="@+id/textPollenStores"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.35"
            android:text="@string/general_notes_pollenstores_text"
            android:layout_gravity="center_vertical" />

        <Spinner
            android:id="@+id/spinnerPollenStores"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.65"
            android:entries="@array/stores_array" />
    </LinearLayout>
