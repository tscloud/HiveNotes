<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:background="@android:color/transparent"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.90"
        android:text="@string/hello_world"
        android:id="@+id/hiveEditTextView"
        android:gravity="center_vertical" />

    <ImageView
        android:src="@drawable/log_round_icon"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.15"
        android:id="@+id/hiveFeedingImage"
        android:contentDescription="@string/create_profile_string"
        android:clickable="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:onClick="hiveFeedingClickHandler"/>
    <!--android:background="@android:color/darker_gray" -->

    <ImageView
        android:src="@drawable/weather_round_icon"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.15"
        android:id="@+id/hiveGeneralImage"
        android:contentDescription="@string/create_profile_string"
        android:clickable="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:onClick="hiveGeneralClickHandler"/>
    <!--android:background="@android:color/darker_gray"-->

    <ImageView
        android:src="@drawable/dashboard_round_icon"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.15"
        android:id="@+id/hiveOtherImage"
        android:contentDescription="@string/create_profile_string"
        android:clickable="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:onClick="hiveOtherClickHandler"/>
    <!--android:background="@android:color/darker_gray"-->

</LinearLayout>