<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:showIn="@layout/fragment_edit_profile, @layout/fragment_edit_apiary">


    <Button
        android:background="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_profile_string"
        android:id="@+id/hiveNoteButtton"
        android:layout_marginBottom="43dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/hiveNoteLine1"
        android:layout_alignEnd="@+id/hiveNoteLine1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:id="@+id/hiveNoteLine1"
        android:layout_alignTop="@+id/hiveNoteButtton"
        android:layout_centerHorizontal="true" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:id="@+id/hiveNoteLine2"
        android:layout_alignBottom="@+id/hiveNoteButtton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:src="@drawable/plus_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hiveNoteImage"
        android:layout_below="@+id/hiveNoteLine1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/hiveNoteButtton"
        android:contentDescription="@string/create_profile_string"
        android:clickable="true" />


</merge>